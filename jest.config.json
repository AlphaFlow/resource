{
  "testRegex": "test/src/hooks/.*$",
  "setupFiles": ["<rootDir>/test/setupTests.ts"],
  "moduleDirectories": ["node_modules", "<rootDir>/src/"],
  "testEnvironment": "jsdom",
  "extensionsToTreatAsEsm": [".jsx", ".ts", ".tsx"],
  "globals": {
    "ts-jest": {
      "useESM": true
    }
  },
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "transform": {
    "^.+\\.(t|j)sx?$": "ts-jest"
  }
}
